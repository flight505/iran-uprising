# Iran Uprising Digital Memorial - Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# FRONTEND (Vite)
# =============================================================================

# Backend API URL
# Development: http://localhost:3000
# Production: https://api.your-domain.com or http://your-onion.onion
VITE_API_URL=http://localhost:3000

# Tor hidden service address (without http://)
# Example: abcdefghijklmnop.onion
VITE_ONION_ADDRESS=

# =============================================================================
# BACKEND (Server)
# =============================================================================

# Server port
PORT=3000

# SQLCipher database encryption key
# Generate with: openssl rand -hex 32
DATABASE_KEY=

# Database file path
DATABASE_PATH=./data/memorial.db

# CORS allowed origins (comma-separated)
# Example: https://iran-uprising.vercel.app,http://localhost:5173
CORS_ORIGINS=http://localhost:5173

# =============================================================================
# SECURITY
# =============================================================================

# Proof of Work difficulty (higher = more work required)
# Recommended: 4 for development, 6+ for production
POW_DIFFICULTY=4

# Message expiration in days
MESSAGE_EXPIRY_DAYS=30

# Rate limiting (requests per minute per IP)
# Note: IP is not logged, only used for rate limiting
RATE_LIMIT_RPM=60

# =============================================================================
# TOR (Optional)
# =============================================================================

# Path to Tor control socket
TOR_CONTROL_SOCKET=/var/run/tor/control

# Tor control password (if using password auth)
TOR_CONTROL_PASSWORD=
